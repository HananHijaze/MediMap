<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white">

    <!-- Meal to change CardView with red border -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mealToChange"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/border_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meal to change"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="What meal do you want to change to?"
        android:textSize="20sp" />



    <!-- Meal 1 CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/meal1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/border_unselected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meal 1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Meal 2 CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/meal2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/border_unselected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meal 2"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Meal 3 CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/meal3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/border_unselected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meal 3"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Meal 4 CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/meal4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/border_unselected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meal 4"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Meal 5 CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/meal5"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="30dp"
        android:background="@drawable/border_unselected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Meal 5"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Buttons for Cancel and Apply -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            app:strokeColor="@color/blue"
            app:strokeWidth="1dp"
            android:backgroundTint="@color/white"
            android:text="Cancel" />

        <Button
            android:id="@+id/buttonApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="Apply" />
    </LinearLayout>

</LinearLayout>
