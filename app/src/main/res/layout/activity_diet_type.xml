<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietType"
    android:background="@color/white">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Select Your Diet Type"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/dietButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Vegetarian Diet Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_vegetarian"
                android:layout_width="343dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:text="Vegetarian"
                android:textColor="#1775BA"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Vegan Diet Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_vegan"
                android:layout_width="345dp"
                android:layout_height="59dp"
                android:background="@android:color/transparent"
                android:text="Vegan"
                android:textColor="#1775BA"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Keto Diet Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_keto"
                android:layout_width="346dp"
                android:layout_height="58dp"
                android:background="@android:color/transparent"
                android:text="Keto"
                android:textColor="#1775BA"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Gluten-Free Diet Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_glutenfree"
                android:layout_width="345dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:text="Gluten-Free"
                android:textColor="#1775BA"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Dairy-Free Diet Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_dairyfree"
                android:layout_width="363dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:text="Dairy-Free"
                android:textColor="#1775BA"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Pescatarian Diet Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_pescatarian"
                android:layout_width="350dp"
                android:layout_height="59dp"
                android:background="@android:color/transparent"
                android:text="Pescatarian"
                android:textColor="#1775BA"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dietButtonsLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
