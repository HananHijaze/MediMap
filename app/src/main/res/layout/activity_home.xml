<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="912dp"
        android:background="@color/white"
        tools:context=".Home"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="169dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.856">

            <ImageView

                android:id="@+id/imageView5"
                android:layout_width="338dp"
                android:layout_height="146dp"
                app:srcCompat="@drawable/sports" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="182dp"
            android:layout_height="47dp"
            android:text="Hello Name,"
            android:textColor="@color/blue"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonLayout"
            android:layout_width="373dp"
            android:layout_height="169dp"
            android:background="@drawable/rounded_corners"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="110dp"
                android:layout_height="176dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:rotation="17"
                android:rotationY="-9"
                android:src="@drawable/shoe"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="154dp"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="9,950"
                android:textColor="@color/blue"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.368" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="73dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="99.5%"
                android:textColor="@color/blue"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.982"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.012" />

            <TextView
                android:id="@+id/outof"
                android:layout_width="217dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="/10,000 Steps"
                android:textColor="@color/blue"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.566"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.656" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="268dp"
                android:layout_height="20dp"
                android:layout_margin="16dp"
                android:max="100"
                android:progress="35"
                android:progressDrawable="@drawable/custom_progressbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.304"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="300dp"
            android:background="@drawable/custom_linear_layout"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55">

            <ImageView
                android:id="@+id/waterImage"
                android:layout_width="133dp"
                android:layout_height="249dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/mlCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0 ml"
                android:textColor="@color/blue"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="170dp"
            android:layout_height="300dp"
            android:background="@drawable/custom_linear_layout"

            android:contentDescription="Meal Plan Button"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55"
            app:srcCompat="@drawable/meaplan" />


        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="423dp"
            android:layout_height="70dp"
            android:background="@color/blue"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/left"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:icon="@drawable/ic_profile"
                android:text="Profile"
                app:backgroundTint="@color/blue"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/center"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:icon="@drawable/ic_home"
                android:text="Home"
                app:backgroundTint="@color/blue"
                app:iconSize="24dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chatbot"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:icon="@drawable/ic_cal"
                android:text="CALCULATER"
                app:backgroundTint="@color/blue"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@color/white" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="373dp"
            android:layout_height="169dp"
            android:background="@drawable/custom_linear_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Meal Plan Button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/roadmap"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="273dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
