<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Circle -->
    <item android:id="@android:id/background">
        <shape android:shape="ring" android:innerRadiusRatio="3.5" android:thicknessRatio="8" android:useLevel="false">
            <solid android:color="#e0e0e0" /> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Progress Circle -->
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="270">
            <shape android:shape="ring" android:innerRadiusRatio="3.5" android:thicknessRatio="8" android:useLevel="true">
                <solid android:color="#4CAF50" /> <!-- Green progress -->
            </shape>
        </rotate>
    </item>
</layer-list>
