<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFCDD2"/> <!-- Background color when pressed -->
            <stroke android:width="3dp" android:color="#D32F2F"/> <!-- Border color when pressed -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Default background color -->
            <stroke android:width="1dp" android:color="@android:color/black"/> <!-- Default border color -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
